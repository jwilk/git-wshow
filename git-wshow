#!/bin/sh

# Copyright Â© 2019 Jakub Wilk <jwilk@jwilk.net>
# SPDX-License-Identifier: MIT

usage()
{
    printf 'Usage:\n  %s [-r REMOTE] COMMIT\n' "$prog"
}

set -e -u -C
prog="${0##*/}"
remote=origin
while getopts 'hr:' opt
do
    case "$opt" in
        h) usage; exit 0;;
        r) remote="$OPTARG";;
        *) exit 1;;
    esac
done
shift $((OPTIND - 1))
[ $# -gt 0 ] || set -- HEAD
if [ $# -ne 1 ]
then
    usage >&2
    exit 1
fi
commit=$(git rev-parse "$@")
remote_url=$(git remote get-url "$remote")
remote_url=${remote_url%/}
url=
case $remote_url in
    https://github.com/*|https://gitlab.com/*|https://salsa.debian.org/*|https://gitlab.gnome.org/*|https://gitlab.mister-muffin.de/*|https://code.videolan.org/*)
        url="${remote_url%.git}/commit/$commit";;
    https://bitbucket.org/*)
        url="${remote_url%.git}/commits/$commit";;
    https://anongit.freedesktop.org/git/*)
        repo=${remote_url#https://anongit.freedesktop.org/git/}
        url="https://cgit.freedesktop.org/${repo%.git}/commit/?id=$commit";;
    https://git.netfilter.org/*|https://git.linuxtv.org/*)
        url="${remote_url}/commit/?id=$commit";;
    https://git.kernel.org/pub/scm/*)
        url="${remote_url%.git}.git/commit/?id=$commit";;
    https://git.savannah.gnu.org/git/*)
        repo=${remote_url#https://git.savannah.gnu.org/git/}
        url="https://git.savannah.gnu.org/cgit/${repo%.git}.git/commit/?id=$commit";;
    https://git.savannah.nongnu.org/git/*)
        repo=${remote_url#https://git.savannah.nongnu.org/git/}
        url="https://git.savannah.nongnu.org/cgit/${repo%.git}.git/commit/?id=$commit";;
    https://git.torproject.org/*)
        repo=${remote_url#https://git.torproject.org/}
        url="https://gitweb.torproject.org/${repo%.git}.git/commit/?id=$commit";;
    https://git.launchpad.net/*)
        url="$remote_url/commit/?id=$commit";;
    git://git.code.sf.net/p/*|https://git.code.sf.net/p/*)
        repo=${remote_url#*://git.code.sf.net/p/}
        url="https://sourceforge.net/p/${repo%.git}/ci/$commit/";;
    git://git.suckless.org/*)
        url="https://${remote_url#git://}/commit/${commit}.html";;
    https://repo.or.cz/*)
        url="${remote_url%.git}.git/commitdiff/$commit";;
    git://gerrit.libreoffice.org/*)
        repo=${remote_url#git://gerrit.libreoffice.org/}
        url="https://gerrit.libreoffice.org/plugins/gitiles/${repo%.git}/+/$commit";;
    https://git.xiph.org/*)
        repo=${remote_url#https://git.xiph.org/}
        url="https://git.xiph.org/?p=$repo;a=commitdiff;h=$commit";;
    https://git.samba.org/*)
        repo=${remote_url#https://git.samba.org/}
        url="https://git.samba.org/?p=$repo;a=commitdiff;h=$commit";;
    https://git.ghostscript.com/*)
        repo=${remote_url#https://git.ghostscript.com/}
        url="https://git.ghostscript.com/?p=$repo;a=commitdiff;h=$commit";;
    git://sourceware.org/git/*|https://sourceware.org/git/*)
        repo=${remote_url#*://sourceware.org/git/}
        url="https://sourceware.org/git/?p=$repo;a=commitdiff;h=$commit";;
    https://git.apache.org/*)
        repo=${remote_url#https://git.apache.org/}
        url="https://github.com/apache/${repo%.git}/commit/$commit";;
    https://pagure.io/*)
        url="${remote_url%.git}/c/$commit";;
    https://git.llvm.org/git/*)
        repo=${remote_url#https://git.llvm.org/git/}
        url="https://git.llvm.org/klaus/${repo%.git}/commit/$commit/";;
    https://dev.gnupg.org/source/*)
        repo=${remote_url#https://dev.gnupg.org/source/}
        code=
        case ${repo%.git} in
            lkleo) code=LIBKLEO;;
            gpgme) code=M;;
            gnupg) code=G;;
            libgpg-error) code=E;;
            gpg4win) code=W;;
            gnupg-doc) code=D;;
            gpgol) code=O;;
            libgcrypt) code=C;;
            kleo) code=KLEOPATRA;;
            pinentry) code=P;;
            g4wt) code=GTO;;
            libksba) code=K;;
            npth) code=PTH;;
            gpa) code=GPA;;
            Scute) code=S;;
            libassuan) code=A;;
            ntbtls) code=T;;
            gpgex) code=X;;
            payproc) code=PAY;;
            book) code=BOOK;;
            phabricator) code=PHAB;;
            libphutil) code=PHUTIL;;
            arcanist) code=ARC;;
            TinySCHEME) code=SCM;;
        esac
        [ -n "$code" ] && url="https://dev.gnupg.org/r${code}${commit}"
esac
if [ -z "$url" ]
then
    printf '%s: unsupported remote URL %s\n' "$prog" "$remote_url"
    exit 1
fi
for browser in sensible-browser xdg-open
do
    command -v "$browser" > /dev/null && break
done
exec "$browser" "$url"

# vim:ts=4 sts=4 sw=4 et
