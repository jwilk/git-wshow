usage()
{
    printf 'Usage: %s [-r REMOTE] [-a N] [-A] [-p] COMMIT\n' "$prog"
    if [ "${1-}" = long ]
    then
        printf '\n'
        cat <<'EOF'
Options:
  -r REMOTE   use this remote
  -a N        abbreviate hash to N digits (or more)
  -A          use alternative URL
  -p          only print the URL
  -h, --help  show this help message and exit
EOF
    fi
}

is_sha1()
{
    case $1 in
        [0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f])
            return 0;;
        *)
            return 1;;
    esac
}

set -e -u -C
prog="${0##*/}"
remote=origin
hlen=40
alt=
while getopts 'r:a:Aph-:' opt
do
    case "$opt" in
        r) remote="$OPTARG";;
        a) hlen="$OPTARG";;
        A) alt=y;;
        p) BROWSER='echo';;
        h)
            usage long
            exit
            ;;
        -)
            case $OPTARG in
                help)
                    usage long
                    exit;;
                *)
                    usage >&2
                    exit 1;;
            esac
            ;;
        *)
            usage >&2
            exit 1
            ;;
    esac
done
shift $((OPTIND - 1))
[ $# -gt 0 ] || set -- HEAD
if [ $# -ne 1 ]
then
    usage >&2
    exit 1
fi
revision="$1"
hlen=$((hlen))
if [ "$hlen" -eq 40 ] && LC_ALL=C is_sha1 "$revision"
then
    commit="$revision"
else
    commit=$(git rev-parse --short="$hlen" "$revision")
fi
remote_url=$(git remote get-url "$remote")
remote_url=${remote_url%/.git}
remote_url=${remote_url%/}
remote_url=${remote_url%.git}
url=
# BEGIN GENERATED CODE
# END GENERATED CODE
if [ "$alt" ]
then
    case $url in
        'https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git/commit/?id='*)
            url="https://git.kernel.org/linus/$commit";;
    esac
fi
if [ -z "$url" ]
then
    printf '%s: unsupported remote URL %s\n' "$prog" "$remote_url" >&2
    exit 1
fi
if [ "${BROWSER-}" = echo ]
then
    printf '%s\n' "$url"
    exit
fi
for browser in sensible-browser xdg-open
do
    command -v "$browser" > /dev/null && break
done
exec "$browser" "$url"

