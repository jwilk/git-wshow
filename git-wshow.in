usage()
{
    printf 'Usage:\n  %s [-r REMOTE] [-a N] [-A] COMMIT\n' "$prog"
}

is_sha1()
{
    case $1 in
        [0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f][0-9a-f])
            return 0;;
        *)
            return 1;;
    esac
}

set -e -u -C
prog="${0##*/}"
remote=origin
hlen=40
alt=
while getopts 'hr:a:Ap' opt
do
    case "$opt" in
        h) usage; exit 0;;
        r) remote="$OPTARG";;
        a) hlen="$OPTARG";;
        A) alt=y;;
        p) BROWSER=echo;;
        *) exit 1;;
    esac
done
shift $((OPTIND - 1))
[ $# -gt 0 ] || set -- HEAD
if [ $# -ne 1 ]
then
    usage >&2
    exit 1
fi
revision="$1"
if [ "$hlen" -eq 40 ] && LC_ALL=C is_sha1 "$revision"
then
    commit="$revision"
else
    commit=$(git rev-parse --short="$hlen" "$revision")
fi
remote_url=$(git remote get-url "$remote")
remote_url=${remote_url%/.git}
remote_url=${remote_url%/}
remote_url=${remote_url%.git}
url=
# BEGIN GENERATED CODE
# END GENERATED CODE
if [ "$alt" ]
then
    case $url in
        'https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git/commit/?id='*)
            url="https://git.kernel.org/linus/$commit";;
    esac
fi
if [ -z "$url" ]
then
    printf '%s: unsupported remote URL %s\n' "$prog" "$remote_url"
    exit 1
fi
if [ "${BROWSER-}" = echo ]
then
    echo "$url"
    exit
fi
for browser in sensible-browser xdg-open
do
    command -v "$browser" > /dev/null && break
done
exec "$browser" "$url"

